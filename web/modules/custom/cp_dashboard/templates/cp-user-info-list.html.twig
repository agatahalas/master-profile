<div class="cp-user-info-message">
  {% if user_name %}
    <h2> {{ user_name }} </h2>
  {% endif %}
  {% if user_ckid %}
    <p><span>Circle K ID: </span> {{ user_ckid }} </p>
  {% endif %}
</div>

<ul {{ attributes }}>
  {% if items %}
    {% for item in items %}
      <li {{ item.attributes }}>
        {% if item.title %}
          <a href="#">
            {% if item.icon_markup %}
              {{ item.icon_markup|raw }}
            {% endif %}
            {{ item.title }}
          </a>
        {% endif %}
        <div>
          {%- if item.rows -%}
            <table>
              <tbody>
              {%- for row in item.rows -%}
                <tr>
                  <td> {{ row.title }} </td>
                  <td> {{ row.value }} </td>
                  <td> {{ row.link }} </td>
                </tr>
              {%- endfor -%}
              </tbody>
            </table>
          {%- endif -%}
        </div>
      </li>
    {% endfor %}
  {% endif %}
</ul>
